												<img src="{{ asset('imagesg/portfolio/image') }}{{destination.id }}.jpg" alt="image{{ destination.id }}">
												<figcaption>
													<h3 class="margin-top-20">{{ destination.dateHist.toString() }}</h3>
													<span>Cliquez pour r√©server un voyage pour {{ destination.ville }}!</span>
												</figcaption>
											</figure>
										</a>
									</div>
								</div>
								<!-- End Portfolio Item -->
							{% endfor %}
						</div>
                    </div>
                </div>
            </div>
			
